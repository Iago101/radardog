<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.edu.ifsp.arq.ads.dmos5.radardog">

    <uses-sdk
        android:minSdkVersion="28"
        android:targetSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_alt"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo_alt"
        android:supportsRtl="true"
        android:theme="@style/Theme.RadarDog">

        <activity
            android:name=".SplashScreen"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".MainActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".MyPetsListActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".DogDataActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".UserDataActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".UserLoginActivity"
            android:exported="true">
        </activity>

        <activity
            android:name=".UserRegisterActivity"
            android:exported="true">
        </activity>
    </application>

</manifest>